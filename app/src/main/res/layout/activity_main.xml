<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grisfondo"
            android:orientation="vertical"
            android:padding="18dp"
            tools:context=".MainActivity">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/botonGoogle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/logogoogleassistant"
                    android:scaleType="center"/>

                <Button
                    android:id="@+id/botonTiempo"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/txvTiempo"
                    android:background="@drawable/nubestiempo"
                    android:scaleType="center"/>
                <TextView
                    android:id="@+id/txvTiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloudy 72ยบ"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Good morning!"
                android:textSize="24dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light traffic ahead."
                android:textSize="24dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/botonNavigate"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/borde_redondeado"
                        android:src="@drawable/ubicacionlogo"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:padding="25dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navigate"
                        android:layout_marginLeft="40dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/botonCall"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/borde_redondeado"
                        android:src="@drawable/telefonologo2"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:padding="25dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make a call"
                        android:layout_marginLeft="40dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/botonPlay"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/borde_redondeado"
                        android:src="@drawable/logoplaylist"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:padding="25dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:layout_marginLeft="55dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/botonImagen"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fotoperfilnoti"
                    android:scaleType="centerInside"
                    android:backgroundTint="@color/grisfondo"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Just for you"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/boton1"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/borde_redondeado"
                android:src="@drawable/flechasuelologo"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:padding="25dp"/>

            <ImageButton
                android:id="@+id/boton2"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde_redondeado"
                android:src="@drawable/fotoperfil"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:padding="18dp"/>

            <ImageButton
                android:id="@+id/boton3"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde_redondeado"
                android:src="@drawable/playlogonoti"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:padding="25dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/logomicro"
            android:scaleType="fitCenter"
            android:layout_gravity="left"/>
        <ImageButton
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:layout_margin="25dp"
            android:background="@drawable/borde_redondeado2"
            android:src="@drawable/logoflecha"
            android:scaleType="centerInside"
            android:padding="2dp"/>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>
